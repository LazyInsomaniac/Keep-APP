<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorAppBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footer"
        android:orientation="vertical">

        <EditText
            android:paddingTop="8dp"
            android:paddingStart="12dp"
            android:id="@+id/title_edit_text"
            android:hint="@string/title_placeholder"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:textStyle="bold" />

        <EditText
            android:paddingStart="12dp"
            android:paddingTop="8dp"
            android:id="@+id/content_edit_text"
            android:hint="@string/note_placeholder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textMultiLine"
            android:gravity="top|left"
            android:background="@android:color/transparent"
            android:scrollbars="vertical" />

    </LinearLayout>

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/footer"
        android:background="@color/colorBottomToolbar"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:stretchColumns="1" >

        <TableRow

            android:id="@+id/firstRow"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <ImageButton
                android:id="@+id/create_new_checkbox_note"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/ic_icon_plus" />

            <TextView
                android:id="@+id/last_modification_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:textAllCaps="false"
                android:textColor="@color/light_grey"
                android:background="?android:attr/selectableItemBackground"
                android:text="@string/last_modification_date" />

            <ImageButton
                android:id="@+id/create_new_draw_note"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/ic_icon_three_dot"/>

        </TableRow>

    </TableLayout>

</RelativeLayout>
